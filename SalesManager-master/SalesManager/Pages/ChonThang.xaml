<local:BasePage x:Class="SalesManager.ChonThang"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalesManager"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="ChonThang">

    <Grid>
        <TextBlock 
                x:Name="Title"
                 Text="VUI LÒNG CHỌN THỜI GIAN &#xD;&#xA;&#x9; ĐỂ THỐNG KÊ HÀNG ĐÃ BÁN Ở ĐÂY" 
                HorizontalAlignment="Center" 
                FontFamily="{StaticResource MyriadBold}"
                FontSize="35" 
                Foreground="{StaticResource TitleBrush}"
                Margin="20 30 20 20" 
                />
        <Label 
                 Content="Tháng"   
                 HorizontalAlignment="Left" 
                FontWeight="Bold" 
                FontSize="30" 
                Foreground="#FF1DB7A4"
                Margin="159,256,0,141.6" Width="104" RenderTransformOrigin="1.065,0.462" 
                />
        <ComboBox x:Name = "thang"
                  HorizontalAlignment="Left" 
                  IsReadOnly="True"
                  VerticalAlignment = "Top"
                  FontSize = "25"
                  Margin="271,260,0,0" RenderTransformOrigin="0.441,0.602" Width="104" 
                    />
        <Label 
                  Content="Năm"   
            HorizontalAlignment="Right" 
                FontWeight="Bold" 
                FontSize="30" 
                Foreground="#FF1DB7A4"
                Margin="0,258,276,151.6" Width="104" 
                />
        <ComboBox x:Name = "nam"
                  HorizontalAlignment="Right" 
                  VerticalAlignment = "Top"
                  FontSize = "25"
                  Margin="0,261,169,0" RenderTransformOrigin="0.441,0.602" Width="104" 
                    />
        <Button
            HorizontalAlignment="Right"
               Foreground="{StaticResource ForegroundLightBrush}"
                Style="{StaticResource MaterialDesignRaisedButton}"
            Margin="0,312,236,101.6" Height="35" FontSize="21"
                 Click="xem_Click" Width="153" RenderTransformOrigin="0.367,0.114">
            XUẤT
        </Button>

        <Button
            HorizontalAlignment="Left"
                Foreground="{StaticResource ForegroundLightBrush}"
                Style="{StaticResource MaterialDesignRaisedButton}"
            Margin="250,312,0,102.6" Height="35" FontSize="21"
                 Click="Thoat_Click" Width="157">
            TRỞ LẠI
        </Button>
    </Grid>
</local:BasePage>
